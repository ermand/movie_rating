<% if !user_signed_in? %>
  <div class="jumbotron">
    <h1>Your favorited movies Reviewed</h1>
    <p>Lorem ipsum dolor sit amet, consectetur adipisicing elit. Sunt molestias ad dolore, odit. Unde ea ut inventore voluptate. Magni cumque rem ratione. Est numquam eius eveniet ullam. Id, pariatur, dolor.</p>
    <%= link_to("Sign Up To Write A Review", new_user_registration_path , class: "btn btn-primary btn-lg") %>
  </div>
<% end %>
<div class="row">
  <% @movies.each do |movie| %>
    <div class="col-sm-6 col-md-3">
      <div class="thumbnail">
        <%= link_to (image_tag movie.image.url(:medium), class: "image"), movie %>
      </div>
    </div>
  <% end %>
</div>
