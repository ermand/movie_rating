<%= form_for @movie, html: { multipart: true , class: "form-horizontal"} do |f| %>
  <% if @movie.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@movie.errors.count, "error") %> prohibited this movie from being saved:</h2>

      <ul>
      <% @movie.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  <div class="form-group">
    <%= f.label :title, class: "control-label col-sm-3" %><br>
    <div class="col-sm-6">
      <%= f.text_field :title, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :description, class: "control-label col-sm-3" %><br>
    <div class="col-sm-6">
      <%= f.text_area :description, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :movie_length, class: "control-label col-sm-3" %><br>
    <div class="col-sm-6">
      <%= f.text_field :movie_length, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :director, class: "control-label col-sm-3" %><br>
    <div class="col-sm-6">
      <%= f.text_field :director, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :rating, class: "control-label col-sm-3" %><br>
    <div class="col-sm-6">
      <%= f.text_field :rating, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :image, class: "control-label col-sm-3" %><br>
    <%= f.file_field :image %>
  </div>

  <div class="row">
    <div class="col-xs-6 col-sm-12 col-sm-offset-3 col-xs-offset-3">
      <div class="btn-toolbar">
        <%= submit_tag("Submit", {:class => 'btn btn-primary'}) %>
      </div>
    </div>
  </div>
<% end %>
