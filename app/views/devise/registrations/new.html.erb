<h2>Sign up</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class: "form-horizontal" }) do |f| %>
  <%= devise_error_messages! %>

  <div class="form-group">
    <%= f.label :email, class: "control-label col-sm-3" %><br />
    <div class="col-sm-6">
      <%= f.email_field :email, autofocus: true, class: "form-control" %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :password, class: "control-label col-sm-3" %>
    <div class="col-sm-6">
      <% if @validatable %>
        <em>(<%= @minimum_password_length %> characters minimum)</em>
      <% end %><br />
      <%= f.password_field :password, autocomplete: "off", class: "form-control" %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :password_confirmation, class: "control-label col-sm-3" %><br />
    <div class="col-sm-6">
      <%= f.password_field :password_confirmation, autocomplete: "off", class: "form-control" %>
    </div>
  </div>

  <div class="row">
    <div class="col-xs-6 col-sm-12 col-sm-offset-3 col-xs-offset-3">
      <div class="btn-toolbar">
        <%= submit_tag("Sign Up", {:class => 'btn btn-primary'}) %>
      </div>
    </div>
  </div>
<% end %>

<%= render "devise/shared/links" %>
