<div class="panel panel-default">
  <div class="panel-body">
    <div class="row ">
      <h1>Listing reviews</h1>
      <%= link_to 'New Review', new_review_path, class: "btn btn-success btn-sm" %>
      <table class="table">
        <thead>
          <tr>
            <th>Rating</th>
            <th>Comment</th>
            <th>User</th>
            <th colspan="3"></th>
          </tr>
        </thead>

        <tbody>
          <% @reviews.each do |review| %>
            <tr>
              <td><%= review.rating %></td>
              <td><%= review.comment %></td>
              <td><%= review.user.email %></td>
              <td><%= link_to 'Show', review, class: "btn btn-info btn-xs" %></td>
              <td><%= link_to 'Edit', edit_review_path(review), class: "btn btn-primary btn-xs" %></td>
              <td><%= link_to 'Destroy', review, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger btn-xs" %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
